@{
    Layout = "~/Views/shared/_Layout.cshtml";
    ViewBag.Title = "AKTURKSOFT | İletişim";
    ViewBag.Description = "AKTURKSOFT İletişim Sayfası";
    ViewBag.Keywords = "AKTURKSOFT, solutions, iletişim, sayfası";
}

<style>
    
    #wrapper {

        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 9999; 
        background: rgba(0,0,0,.5)

    }

    #message-sent {
        width: 340px;
        height: 60px;
        line-height: 60px;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -30px;
        margin-left: -170px;
        font-weight: 600;
        border-radius: 0 6px;
        color: #191970;
        background: white;
        box-shadow: 0 0 20px 4px #0d6636;

    }

    #close-button {
        width: 18px;
        height: 18px;
        line-height: 18px;
        text-align: center;
        position: absolute;
        top: -8px;
        right: -8px;
        background: white;
        border-radius: 0 8px;
        border: 1px solid #0d6636;
        cursor: pointer;
        font-weight: 600;
    }

</style>

<div class="content-text">

    <h2>Neredeyiz</h2>
    <div id="google-maps">
        @*<iframe src="https://goo.gl/maps/Mx7AUr18mKD2" width="800" height="420" frameborder="0" style="border:0" allowfullscreen></iframe>*@
        @*<iframe src="https://goo.gl/maps/Mx7AUr18mKD2" width="800" height="420" frameborder="0" style="border:0" allowfullscreen></iframe>*@
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d762.494902440062!2d29.977815829211114!3d40.14273792390755!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cb8fe3e07f739d%3A0x28e314902b1c26a9!2sG%C3%B6zde+K%C4%B1z+Apart+%26+Pansiyon!5e0!3m2!1str!2str!4v1535887839585" width="800" height="420" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
    <p style="padding-left:60px;padding-top:20px">
        <B>Adres</B>: Gazipaşa Mah. Mazharbey Sok. No:33 [Park Taksi karşısı]
        <br />
        <b>Telefon</b>: 0505 606 95 93 <b>/</b> 0542 433 94 89 <b>/</b> 0535 262 36 12
    </p>

    <h2>İletişim</h2>


    @*method:post gönderir,method:get alır*@
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contact-form", action = "/Iletisim" }))
    {
        if (ViewBag.Success != null && ViewBag.Success)
        {
            <div id="wrapper">
                <div id="message-sent">
                    <div id="close-button">
                        <span>X</span>
                    </div>
                    <span>Mesajınız başarıyla gönderilmiştir.</span>
                </div>
            </div>
        }
        

        <div class="contact-line">

           
            <button class="obligation-button" type="button">
                <span>Sadece Gerekli Alanları Göster</span>
            </button>

        </div>

        <div class="contact-line">
            <div class="contact-col1">
                <span>Kullanıcı Adı</span>
            </div>
            <div class="contact-col2">
                <input type="text" class="input" id="input-nickname" name="NickName" required />
            </div>
        </div>

        <div class="contact-line contact-line-unrequired">
            <div class="contact-col1">
                <span>Ad Soyad</span>
            </div>
            <div class="contact-col2">
                <input type="text" class="input" id="FullName" />
            </div>
        </div>

        <div class="contact-line">
            <div class="contact-col1">
                <span>E-Posta</span>
            </div>
            <div class="contact-col2">
                <input type="email" class="input" id="input-mail" name="Email" required />
            </div>
        </div>

        <div class="contact-line contact-line-unrequired">
            <div class="contact-col1">
                <span>Tel</span>
            </div>
            <div class="contact-col2">
                <input type="tel" class="input" name="Phone" />
            </div>
        </div>

        <div class="contact-line message">
            <div class="contact-col1">
                <span>İleti</span>
            </div>
            <div class="contact-col2">
                <textarea class="textarea" id="input-text" name="Message" required> </textarea>
            </div>
        </div>
        <div class="contact-line">

            <button type="submit" class="contact-button" onclick="formEksikMi()">
                <span>Gönder</span>
            </button>

        </div>
    }  
</div>
   <script>
       $(document).ready(function () {
           $(".obligation-button").click(function () {
               $(".contact-line-unrequired").slideToggle();
           });
       });

       function formEksikMi() {
           var rumuzDegeri = document.getElementById("input-nickname").value;
           var epostaDegeri = document.getElementById("input-email").value;
           var iletiDegeri = document.getElementById("input-text").value;
           if (rumuzDegeri === "" || iletiDegeri === "" || epostaDegeri === "") {
               alert("Lütfen gerekli alanlari doldurunuz.");
               return false;
           }
       }
   </script>


<script>

    $('#wrapper').click(function() {
        $(this).fadeOut('slow');
    });

</script>
